---
import CinematicReveal from './ui/CinematicReveal.tsx';
import Counter from './ui/Counter.tsx';
import Icon from './ui/Icon.tsx';
---

<section id="about" class="section about">
  <CinematicReveal client:load>
    <div class="section-header">
      <span class="section-cmd">cat /etc/lucas.conf</span>
      <h2 class="section-title">
        <span class="title-bracket">[</span>
        Core Profile
        <span class="title-bracket">]</span>
      </h2>
    </div>
  </CinematicReveal>

  <div class="about-layout">
    <!-- Photo Section -->
    <CinematicReveal client:load delay={0.2}>
      <div class="about-photo-container">
        <div class="photo-frame">
          <div class="photo-wrapper">
            <img src="/images/profile.jpeg" alt="Lucas Henry" class="profile-photo" />
            <div class="scan-line"></div>
          </div>
          <div class="photo-border"></div>
          <div class="photo-glow"></div>
          <div class="photo-glitch"></div>
        </div>
        <div class="photo-label">
          <span class="label-key">avatar</span>
          <span class="label-colon">:</span>
          <span class="label-value">"/usr/share/lucas/profile.jpg"</span>
        </div>
      </div>
    </CinematicReveal>

    <!-- Config File Section -->
    <div class="about-content">
      <CinematicReveal client:load delay={0.3}>
        <div class="config-block">
          <div class="config-header">
            <span class="config-path">~/.config/lucas/profile.conf</span>
            <div class="config-dots">
              <span></span><span></span><span></span>
            </div>
          </div>
          <div class="config-body">
            <p class="config-comment"># Core identity configuration</p>
            <p class="config-line">
              <span class="config-key">name</span>
              <span class="config-eq">=</span>
              <span class="config-string">"Lucas Andre Henry Diaz"</span>
            </p>
            <p class="config-line">
              <span class="config-key">role</span>
              <span class="config-eq">=</span>
              <span class="config-string">"Tech Lead"</span>
            </p>
            <p class="config-line">
              <span class="config-key">company</span>
              <span class="config-eq">=</span>
              <span class="config-string">"Falabella"</span>
            </p>
            <p class="config-line">
              <span class="config-key">location</span>
              <span class="config-eq">=</span>
              <span class="config-string">"Santiago, Chile"</span>
            </p>

            <p class="config-comment"># Specialization</p>
            <p class="config-line">
              <span class="config-key">focus</span>
              <span class="config-eq">=</span>
              <span class="config-string">"E-commerce & Distributed Systems"</span>
            </p>
            <p class="config-line">
              <span class="config-key">architecture</span>
              <span class="config-eq">=</span>
              <span class="config-string">"Monorepo Systems at Scale"</span>
            </p>

            <p class="config-comment"># Languages</p>
            <p class="config-line">
              <span class="config-key">lang_primary</span>
              <span class="config-eq">=</span>
              <span class="config-string">"es_CL.UTF-8"</span>
            </p>
            <p class="config-line">
              <span class="config-key">lang_secondary</span>
              <span class="config-eq">=</span>
              <span class="config-string">"en_US.UTF-8"</span>
              <span class="config-note"># C1 Advanced</span>
            </p>

            <p class="config-comment"># AI Integration</p>
            <p class="config-line">
              <span class="config-key">ai_native</span>
              <span class="config-eq">=</span>
              <span class="config-bool">true</span>
            </p>
            <p class="config-line">
              <span class="config-key">ai_tools</span>
              <span class="config-eq">=</span>
              <span class="config-array">["Claude Code", "Codex", "Perplexity"]</span>
            </p>
          </div>
        </div>
      </CinematicReveal>

      <!-- System Stats -->
      <CinematicReveal client:load delay={0.4}>
        <div class="system-stats">
          <div class="stats-header">
            <span class="stats-cmd">systemctl status lucas</span>
          </div>
          <div class="stats-grid">
            <div class="stat-item">
              <span class="stat-icon active"></span>
              <span class="stat-key">uptime</span>
              <span class="stat-value">
                <Counter client:load value={6} suffix="+ years" />
              </span>
            </div>
            <div class="stat-item">
              <span class="stat-icon active"></span>
              <span class="stat-key">ai_exp</span>
              <span class="stat-value">
                <Counter client:load value={2} suffix="+ years" />
              </span>
            </div>
            <div class="stat-item">
              <span class="stat-icon active"></span>
              <span class="stat-key">english</span>
              <span class="stat-value highlight">C1</span>
            </div>
            <div class="stat-item">
              <span class="stat-icon active"></span>
              <span class="stat-key">status</span>
              <span class="stat-value status">ACTIVE</span>
            </div>
          </div>
        </div>
      </CinematicReveal>

      <!-- Installed Packages (Certifications) -->
      <CinematicReveal client:load delay={0.5}>
        <div class="packages-block">
          <div class="packages-header">
            <span class="packages-cmd">pacman -Qi certifications</span>
          </div>
          <div class="packages-list">
            <div class="package-item">
              <div class="package-row">
                <span class="pkg-key">Name</span>
                <span class="pkg-colon">:</span>
                <span class="pkg-value">ef-set-english-c1</span>
              </div>
              <div class="package-row">
                <span class="pkg-key">Version</span>
                <span class="pkg-colon">:</span>
                <span class="pkg-value">68/100</span>
              </div>
              <div class="package-row">
                <span class="pkg-key">Description</span>
                <span class="pkg-colon">:</span>
                <span class="pkg-value desc">EF SET English Certificate - C1 Advanced</span>
              </div>
            </div>
            <div class="package-divider"></div>
            <div class="package-item">
              <div class="package-row">
                <span class="pkg-key">Name</span>
                <span class="pkg-colon">:</span>
                <span class="pkg-value">scrum-foundations-sfpc</span>
              </div>
              <div class="package-row">
                <span class="pkg-key">Version</span>
                <span class="pkg-colon">:</span>
                <span class="pkg-value">certified</span>
              </div>
              <div class="package-row">
                <span class="pkg-key">Description</span>
                <span class="pkg-colon">:</span>
                <span class="pkg-value desc">Scrum Foundations Professional Certificate</span>
              </div>
            </div>
          </div>
        </div>
      </CinematicReveal>
    </div>
  </div>

  <!-- Philosophy Quote -->
  <CinematicReveal client:load delay={0.6}>
    <div class="philosophy-block">
      <span class="philosophy-prompt">echo $PHILOSOPHY</span>
      <p class="philosophy-text">"Build systems that enhance human capability."</p>
    </div>
  </CinematicReveal>
</section>

<style>
  .about {
    background: linear-gradient(180deg, var(--bg-primary), var(--bg-secondary), var(--bg-primary));
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .section-cmd {
    font-family: var(--font-terminal);
    font-size: 0.8rem;
    color: var(--accent-sage);
    display: block;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .title-bracket {
    color: var(--accent-amber);
    font-weight: 300;
  }

  /* Layout */
  .about-layout {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  /* Photo Section */
  .about-photo-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .photo-frame {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    max-width: 280px;
  }

  .photo-wrapper {
    width: 100%;
    height: 100%;
    border: 2px solid var(--glass-border);
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
  }

  .profile-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    filter: grayscale(20%) contrast(1.05);
    transition: filter 0.3s ease;
  }

  .photo-frame:hover .profile-photo {
    filter: grayscale(0%) contrast(1.1);
  }

  /* Scan line effect */
  .scan-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg,
      transparent,
      rgba(212, 165, 116, 0.8),
      transparent
    );
    animation: scan 3s linear infinite;
  }

  @keyframes scan {
    0% { top: 0; opacity: 1; }
    100% { top: 100%; opacity: 0; }
  }

  /* Rotating gradient border */
  .photo-border {
    position: absolute;
    inset: -3px;
    border-radius: calc(var(--radius-lg) + 3px);
    background: linear-gradient(135deg,
      var(--accent-amber),
      var(--accent-gold),
      var(--accent-cream),
      var(--accent-sage),
      var(--accent-amber)
    );
    background-size: 300% 300%;
    animation: rotate-gradient 4s linear infinite;
    z-index: -1;
  }

  @keyframes rotate-gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .photo-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle,
      rgba(212, 165, 116, 0.25) 0%,
      transparent 60%
    );
    z-index: -2;
    animation: glow-pulse 3s ease-in-out infinite;
  }

  @keyframes glow-pulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }

  /* Glitch layer */
  .photo-glitch {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-lg);
    opacity: 0;
    pointer-events: none;
  }

  .photo-frame:hover .photo-glitch {
    animation: photo-glitch 0.3s ease-in-out;
  }

  @keyframes photo-glitch {
    0%, 100% {
      opacity: 0;
      transform: translate(0);
    }
    20% {
      opacity: 0.8;
      transform: translate(-2px, 1px);
      box-shadow: 2px 0 var(--accent-amber), -2px 0 var(--accent-gold);
    }
    40% {
      opacity: 0.6;
      transform: translate(2px, -1px);
      box-shadow: -2px 0 var(--accent-amber), 2px 0 var(--accent-gold);
    }
    60% {
      opacity: 0.4;
      transform: translate(-1px, 2px);
    }
    80% {
      opacity: 0.2;
      transform: translate(1px, -2px);
    }
  }

  .photo-label {
    font-family: var(--font-terminal);
    font-size: 0.75rem;
    text-align: center;
  }

  .label-key {
    color: var(--accent-cream);
  }

  .label-colon {
    color: var(--text-dim);
    margin: 0 0.25rem;
  }

  .label-value {
    color: var(--accent-sage);
  }

  /* Config Block */
  .config-block {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .config-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--glass-border);
  }

  .config-path {
    font-family: var(--font-terminal);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .config-dots {
    display: flex;
    gap: 6px;
  }

  .config-dots span {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--glass-border);
  }

  .config-dots span:nth-child(1) { background: rgba(232, 89, 89, 0.6); }
  .config-dots span:nth-child(2) { background: rgba(212, 165, 116, 0.6); }
  .config-dots span:nth-child(3) { background: rgba(138, 154, 124, 0.6); }

  .config-body {
    padding: 1.25rem;
    font-family: var(--font-terminal);
    font-size: 0.8rem;
    line-height: 1.8;
  }

  .config-comment {
    color: var(--text-dim);
    font-style: italic;
    margin-top: 0.75rem;
  }

  .config-comment:first-child {
    margin-top: 0;
  }

  .config-line {
    display: flex;
    gap: 0.25rem;
    flex-wrap: wrap;
  }

  .config-key {
    color: var(--accent-cream);
  }

  .config-eq {
    color: var(--text-dim);
  }

  .config-string {
    color: var(--accent-sage);
  }

  .config-bool {
    color: var(--accent-gold);
  }

  .config-array {
    color: var(--accent-amber);
  }

  .config-note {
    color: var(--text-dim);
    margin-left: 0.5rem;
  }

  /* System Stats */
  .system-stats {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .stats-header {
    padding: 0.75rem 1rem;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--glass-border);
  }

  .stats-cmd {
    font-family: var(--font-terminal);
    font-size: 0.75rem;
    color: var(--accent-sage);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1px;
    background: var(--glass-border);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1.25rem 1rem;
    background: var(--bg-secondary);
    text-align: center;
  }

  .stat-icon {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--text-dim);
  }

  .stat-icon.active {
    background: var(--accent-sage);
    box-shadow: 0 0 8px rgba(138, 154, 124, 0.6);
    animation: status-pulse 2s ease-in-out infinite;
  }

  @keyframes status-pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .stat-key {
    font-family: var(--font-terminal);
    font-size: 0.65rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-family: var(--font-terminal);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--accent-amber);
  }

  .stat-value.highlight {
    color: var(--accent-gold);
  }

  .stat-value.status {
    color: var(--accent-sage);
    font-size: 0.9rem;
  }

  /* Packages Block */
  .packages-block {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .packages-header {
    padding: 0.75rem 1rem;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--glass-border);
  }

  .packages-cmd {
    font-family: var(--font-terminal);
    font-size: 0.75rem;
    color: var(--accent-amber);
  }

  .packages-list {
    padding: 1.25rem;
  }

  .package-item {
    font-family: var(--font-terminal);
    font-size: 0.8rem;
  }

  .package-row {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.35rem;
  }

  .pkg-key {
    color: var(--accent-cream);
    min-width: 90px;
  }

  .pkg-colon {
    color: var(--text-dim);
  }

  .pkg-value {
    color: var(--text-secondary);
  }

  .pkg-value.desc {
    color: var(--text-muted);
  }

  .package-divider {
    height: 1px;
    background: var(--glass-border);
    margin: 1rem 0;
  }

  /* Philosophy Block */
  .philosophy-block {
    text-align: center;
    padding: 2rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
  }

  .philosophy-prompt {
    font-family: var(--font-terminal);
    font-size: 0.75rem;
    color: var(--accent-sage);
    display: block;
    margin-bottom: 1rem;
  }

  .philosophy-text {
    font-size: 1.25rem;
    font-style: italic;
    color: var(--accent-cream);
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .about-layout {
      grid-template-columns: 1fr;
    }

    .about-photo-container {
      align-items: center;
    }

    .photo-frame {
      max-width: 220px;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .package-row {
      flex-direction: column;
      gap: 0.1rem;
    }

    .pkg-key {
      min-width: auto;
    }
  }
</style>
